@model School.Models.NoticeBoard
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "NoticeBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NoticeBoard</h1>

<h4>NoticeBoard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NoticeBoard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoticeBody" class="control-label"></label>
                <input asp-for="NoticeBody" class="form-control" />
                <span asp-validation-for="NoticeBody" class="text-danger"></span>
            </div>
            <div class="form-group visually-hidden">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" value="@Context.Session.GetString("Username")" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
